{
  "name": "cultuurnet/broadway-tools",
  "description": "",
  "type": "library",
  "license": "Apache-2.0",
  "authors": [],
  "require": {
    "php": "~5.6 || >=7.0",
    "broadway/broadway": "~0.10."
  },
  "require-dev": {
    "phpunit/phpunit": "~5.7",
    "squizlabs/php_codesniffer": "~2.3",
    "phing/phing": "~2.11",
    "satooshi/php-coveralls": "~0.7"
  },
  "autoload": {
    "psr-4": {
      "CultuurNet\\Broadway\\": "src/"
    }
  },
  "autoload-dev": {
